        <TextView
            android:id="@+id/city_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textSize="26sp" />



        <TextView
            android:id="@+id/temperature_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:layout_below="@id/city_text"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="70sp"
            android:gravity="center">

        </TextView>
        <TextView
            android:id="@+id/hilowmain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ececec"
            android:layout_below="@id/temperature_text"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="90dp"
            android:maxHeight="90dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/hilowmain_text"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true">

        </ImageView>



        <TextView
            android:id="@+id/des_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/icon"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/humidity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/des_text"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"

            android:textSize="20sp"
            android:gravity="center_horizontal">

        </TextView>

        <TextView
            android:id="@+id/pressure_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/humidity_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"

            android:gravity="center_horizontal"/>

        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:maxWidth="700dp"
            android:maxHeight="700dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/clearat_day"/>-->

           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/pressure_text"
               android:scrollbars="none"
               android:id="@+id/horizontalScrollView"
               android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hor_relative"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv1"
                android:layout_centerVertical="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            android:id="@+id/icon11"
            android:maxWidth="40dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day11"
                android:layout_centerHorizontal="true"
                android:text=""
                android:layout_below="@id/icon11"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp11"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/day11"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv2"
                android:layout_toRightOf="@id/rv1">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:id="@+id/icon12"
                    android:maxWidth="40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day12"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_below="@id/icon12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp12"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/day12"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv3"
                android:layout_toRightOf="@id/rv2">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:id="@+id/icon13"
                    android:maxWidth="40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day13"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_below="@id/icon13"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp13"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/day13"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv4"
                android:layout_toRightOf="@id/rv3">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:id="@+id/icon14"
                    android:maxWidth="40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day14"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_below="@id/icon14"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp14"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/day14"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv5"
                android:layout_toRightOf="@id/rv4">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:id="@+id/icon15"
                    android:maxWidth="40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day15"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_below="@id/icon15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp15"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/day15"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rv6"
                android:layout_toRightOf="@id/rv5">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:id="@+id/icon16"
                    android:maxWidth="40dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day16"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:layout_below="@id/icon16"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp16"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/day16"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true" />



            </RelativeLayout>







        </RelativeLayout>
           </HorizontalScrollView>


    </RelativeLayout>
</ScrollView>







