            </RelativeLayout>
               </HorizontalScrollView>

            <TextView
                 android:id="@+id/des_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textColor="#FFFFFF"
                 android:gravity="start"
                 android:textSize="22sp"
                android:layout_below="@+id/temperature_text"
                android:layout_toRightOf="@+id/temperature_text"
                android:layout_alignLeft="@+id/city_text"
                android:layout_alignStart="@+id/city_text" />




        </RelativeLayout>
    </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>


    <ImageView
        android:id="@+id/menuicon"
        android:onClick="actionMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/menu"/>

    <ImageView
        android:id="@+id/acsearch"
        android:onClick="actionSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/menuicon"
        android:layout_alignParentTop="true"
        android:src="@drawable/search"/>

    <ImageView
        android:id="@+id/share"
        android:onClick="share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/acsearch"
        android:layout_alignParentTop="true"
        android:src="@drawable/share"/>

    <TextView
        android:id="@+id/wnlogo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="WeatherNow"/>

    <ImageView
        android:id="@+id/fav"
        android:onClick="favorites"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/share"
        android:layout_alignParentTop="true"
        android:src="@drawable/favorite"/>

    <RelativeLayout
        android:id="@+id/progresslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress"
            android:text="Fetching weather"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textColor="#f5f5f5"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/progress"
        android:layout_marginTop="100dp">

        <com.airbnb.lottie.LottieAnimationView
