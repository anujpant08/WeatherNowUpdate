<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Magenta</item>
        <item name="colorPrimaryDark">@color/Magenta</item>
        <item name="colorAccent">@color/Magenta</item>

        <!--<item name="android:colorBackground">@color/colorBack</item>-->
    </style>
        <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Magenta</item>
        <item name="colorPrimaryDark">@color/Magenta</item>
        <item name="colorAccent">@color/Magenta</item>
    </style>
    <style name="PlacesTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Magenta</item>
        <item name="colorPrimaryDark">@color/Magenta</item>
        <item name="colorAccent">@color/thunder</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBarOverlay">@null</item>

    </style>
    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Magenta</item>
        <item name="colorAccent">@color/Magenta</item>
        <item name="colorPrimaryDark">@color/Magenta</item>


    </style>

    <style
        parent="PACV.Widget.PlacesAutoCompleteTextView"
        name="Widget.AutoCompleteTextView.Styled">

        <item name="android:background">@color/snow</item>
        <item name="android:textAppearance">@color/Magenta</item>

    </style>

    <style
        parent="Theme.AppCompat"
        name="SettingsActivity">

        <item name="android:background">#FF303030</item>
        <item name="android:textAppearance">@color/Magenta</item>
        <item name="colorAccent">@color/Magenta</item>
        <item name="colorPrimary">@color/Magenta</item>

    </style>

</resources>
